<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircularImageView">
        <attr name="border" format="boolean"></attr>
        <attr name="border_width" format="dimension"></attr>
        <attr name="border_color" format="color"></attr>
        <attr name="shadow" format="boolean"></attr>
    </declare-styleable>

    <declare-styleable name="Theme2">
        <attr name="circularImageViewStyle" format="reference"></attr>
    </declare-styleable>


    <declare-styleable name="ImageViewWithTriangle">
        <attr name="triangle_way" format="boolean"></attr>
    </declare-styleable>

    <declare-styleable name="TextViewWithTriangle">
        <attr name="isLeft" format="boolean"></attr>
    </declare-styleable>
    <declare-styleable name="Theme3">
        <attr name="triangleImageViewStyle" format="reference"></attr>
    </declare-styleable>

    <declare-styleable name="Theme4">
        <attr name="triangleTextViewStyle" format="reference"></attr>
    </declare-styleable>
</resources>